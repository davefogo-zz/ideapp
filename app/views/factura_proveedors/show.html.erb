<p>
  <strong>Fecha de recepcion:</strong>
  <%= @factura_proveedor.fecha_recepcion %>
</p>

<p>
  <strong>Fecha de vencimiento:</strong>
  <%= @factura_proveedor.fecha_vencimiento %>
</p>

<p>
  <strong>Orden de Publicidad:</strong>
  <%= @factura_proveedor.ordene_id %>
</p>

<p>
  <strong>Orden de Pago:</strong>
  <%= @factura_proveedor.try(:pago_id) %>
</p>

<p>
  <strong>Numero de factura:</strong>
  <%= @factura_proveedor.numero_de_factura %>
</p>

<p>
  <strong>Importe:</strong>
  <%= number_to_currency(@factura_proveedor.importe, :precision => 0) %>
</p>

<p>
  <strong>Iva:</strong>
  <%= number_to_currency(@factura_proveedor.iva, :precision => 0) %>
</p>

<p>
  <strong>Pronto Pago:</strong>
  <%= number_to_currency(@factura_proveedor.importe_pronto_pago, :precision => 0) %>
</p>


<%= link_to 'Editar', edit_factura_proveedor_path(@factura_proveedor) %> |
<%= link_to 'Regresar', factura_proveedors_path %>|
<%= link_to 'Nueva factura de proveedor', new_factura_proveedor_path %>
