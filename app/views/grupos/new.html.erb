<% content_for :title do %>Grupo<% end %>
<h3>Grupo</h3>
<div class="form">
  <%= simple_form_for @grupo do |form| %>
    <%= form.input :grupo %>
    <%= form.input :descripcion %>
    <%= form.association :clase, :label_method => :descripcion,  label: "Clase" %>
    <%= form.button :submit, 'Submit', class: 'submit' %>
  <% end %>
</div>