<h1>Grupos</h1>

<table>
  <thead>
    <tr>
      <th>Grupo Id</th>
      <th>Clase</th>
      <th>Grupo</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @grupos.each do |grupo| %>
	    <tr>
        <td><%= grupo.id %></td>
        <td><%= grupo.clase.try(:id) %></td>
		    <td><%= grupo.grupo %></td>
		    <td><%= grupo.descripcion %></td>
		  </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Nuevo grupo', new_grupo_path %>
<br>
<br>
<%= form_tag import_grupos_path, multipart: true do%>
  <%= file_field_tag :file %><br>
  <%= submit_tag 'Subir Datos', class: 'btn btn-default' %>
<% end %><br>