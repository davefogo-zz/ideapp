<p id="notice"><%= notice %></p>

<h1>Listing Clientes</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Nit</th>
      <th>Dirección de facturación</th>
      <th>Teléfono</th>
      <th>Tipo de cliente</th>
      <th>Contacto comercial</th>
      <th>Contacto facturación</th>
      <th>Cupo de crédito</th>
      <th>Colaboradore</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nombre %></td>
        <td><%= cliente.nit %></td>
        <td><%= cliente.dirección_de_facturación %></td>
        <td><%= cliente.teléfono %></td>
        <td><%= cliente.tipo_de_cliente %></td>
        <td><%= cliente.contacto_comercial %></td>
        <td><%= cliente.contacto_facturación %></td>
        <td><%= cliente.cupo_de_crédito %></td>
        <td><%= cliente.colaboradore %></td>
        <td><%= link_to 'Show', cliente %></td>
        <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

