<div class="row">
  <h1>Listado de Transacciones</h1>
  <div class="pull-right range-query">
     <%#= form_tag ajuste_transaccions_path, method: :get do %>
        <%#= text_field_tag 'search[fecha_from]', @search.fecha_from %>
        <%#= text_field_tag 'search[fecha_to]', @search.fecha_to %>
        <%#= submit_tag 'Buscar', class: 'btn search-button' %>
      <%# end %>
  </div>
</div>
<div class="media">
<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Fecha</th>
          <th>Debito</th>
          <th>Credito</th>
          <th>Cuenta</th>
          <th>Numero de Ajuste</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @transaccions.each do |transaccion| %>
          <tr>
            <td><%= transaccion.fecha %></td>
            <td><%= number_to_currency(transaccion.debito) %></td>
            <td><%= number_to_currency(transaccion.credito) %></td>
            <td><%= transaccion.subcuenta_puc_id %></td>
            <td><%= transaccion.ajuste_id %></td>
          </tr>
        <% end %>
		<p>
	  		<strong>Total Debito:</strong>
	  		<%= Transaccion.sum(:debito) %>
		</p>
      </tbody>
    </table>
  </div>
</div>
<br>
<%= link_to 'Descargar Reporte', total_ajustes_path(format: "csv"), class: 'btn btn-default' %>
