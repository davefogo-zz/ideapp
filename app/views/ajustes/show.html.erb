<p>
  <strong>Numero de Ajuste:</strong>
  <%= @ajuste.try(:id) %>
</p> 

<p>
  <strong>Fecha:</strong>
  <%= @ajuste.try(:fecha) %>
</p>

<p>
  <strong>Cliente:</strong>
  <%= @ajuste.cliente.try(:nombre)%>
</p>

<p>
  <strong>Nit:</strong>
  <%= @ajuste.cliente.try(:nit)%>
</p>

<p>
  <strong>Proveedor:</strong>
  <%= @ajuste.proveedore.try(:nombre) %>
</p>
<p>
  <strong>Nit:</strong>
  <%= @ajuste.proveedore.try(:nit) %>
</p>

<p>
  <strong>Descripcion:</strong>
  <%= @ajuste.try(:descripcion) %>
</p>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Fecha</th>
          <th>Codigo</th>
          <th>Cuenta</th>
          <th>Debito</th>
          <th>Credito</th>
        </tr>
      </thead>
        <tbody>
        <% @transaccions.each do |transaccion| %>
            <tr>
              
              <td><h4><%= transaccion.try(:fecha) %></h4></td>
              <td><h4><%= transaccion.subcuenta_puc.subcuenta %></h4></td>
              <td><h4><%= transaccion.subcuenta_puc.descripcion %></h4></td>
              <td><h4><%= number_to_currency(transaccion.debito, :precision => 0) %></h4></td>
              <td><h4><%= number_to_currency(transaccion.credito, :precision => 0) %></h4></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

<p><%= link_to 'Agregar Transaccion', new_ajuste_transaccion_path(@ajuste)%></p>
<p><%= link_to 'Descargar Ajuste Contable en PDF', ajuste_path(@ajuste, format: 'pdf') %></p>
<p><%= link_to 'Editar', edit_ajuste_path(@ajuste) %> |
<%= link_to 'Regresar', ajustes_path %></p>

