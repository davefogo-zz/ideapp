<% content_for :title do %>Items Recibos de Caja<% end %>
<h3>Item Recibo de Caja</h3>
<div class="form">
  <%= simple_form_for([@recibo_de_caja, @recibo_item]) do |form| %>
    <%= form.input :fecha %>
    <%= form.association :factura, :label_method => :id, include_blank: false, label: "Factura"  %>
    <%= form.input :importe %>
    <%= form.input :forma_de_pago, collection: ['Cheque', 'Efectivo', 'Transferencia'] %>
    <%= form.input :numero_de_cheque %>
    <%= form.button :submit, 'Crear', class: 'submit' %>
  <% end %>
</div>
<%= link_to 'Regresar', recibo_de_cajas_path %>