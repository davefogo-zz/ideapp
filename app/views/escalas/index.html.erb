<div class="row">
<h1>Listado de Escalas</h1>

<div class="media">
<div class="media-body">
 <table class="table table-hover">
  <thead>
    <tr>
      <th>Escala</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @escala.each do |escala| %>
	    <tr>
		    <td><%= number_to_percentage((escala.escala * 100
        ), :precision => 2) %></td>
        <td><%= link_to 'Editar', edit_escala_path(escala), class: 'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Eliminar', escala, method: :delete, data: { confirm: 'Confirma?' }, class: 'btn btn-mini btn-danger' %></td>
    <% end %>
    </tr>
  </tbody>
</table>
</div>
</div>
<br>
<%= link_to 'Nueva Escala', new_escala_path %>