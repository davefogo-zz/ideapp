<%= form_for [@presupuesto, @ordene] do |f| %>
  
  <div class="field">
    <%= f.label :proveedore%><br>
    <%= collection_select( :proveedore, :proveedore_id, Proveedore.all, :id, :nombre, {}, {:multiple => false}) %>
  </div> 

  <div class="field">
    <%= f.label :fecha_orden %><br>
    <%= f.datetime_select :fecha_orden %>
  </div>
  <div class="field">
    <%= f.label :medida %><br>
    <%= f.text_field :medida %>
  </div>
  <div class="field">
    <%= f.label :unidad %><br>
    <%= f.text_field :unidad %>
  </div>
  <div class="field">
    <%= f.label :costo_unidad %><br>
    <%= f.number_field :costo_unidad %>
  </div>
  <div class="field">
    <%= f.label :total %><br>
    <%= f.number_field :total %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
