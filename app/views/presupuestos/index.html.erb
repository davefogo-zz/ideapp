<p id="notice"><%= notice %></p>

<h1>Listado de Presupuestos</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Fecha</th>
          <th>Cliente</th>
          <th>Nit</th>
          <th>Dirección</th>
          <th>Teléfono</th>
          <th>Agencia</th>
          <th>Nit agencia</th>
          <th>Titulo</th>
          <th>Producto</th>
          <th>Colaboradore</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @presupuestos.each do |presupuesto| %>
          <tr>
            <td><%= presupuesto.fecha %></td>
            <td><%= presupuesto.cliente.try(:nombre) %></td>
            <td><%= presupuesto.cliente.try(:nit) %></td>
            <td><%= presupuesto.cliente.try(:direccion_de_facturacion) %></td>
            <td><%= presupuesto.cliente.try(:telefono) %></td>
            <td><%= presupuesto.titulo %></td>
            <td><%= presupuesto.producto %></td>
            <td><%= presupuesto.cliente.colaboradore.try(:nombre) %></td>
            <td><%= link_to 'Show', presupuesto, class: 'btn btn-mini btn-default' %></td>
            <td><%= link_to 'Edit', edit_presupuesto_path(presupuesto), class: 'btn btn-mini btn-success' %></td>
            <td><%= link_to 'Destroy', presupuesto, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

