<h1>Listing Facturas</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><strong>Factura de venta:</strong></td>
      <td><strong>Fecha de expedicion:</strong></td>
      <td><strong>Cliente:</strong></td>
    </tr>
      
    <% @factura.each do |factura| %>
      <tr>
        <td><%= factura.id %></td>
        <td><%= factura.fecha_de_expedicion %></td>
        <td><%= factura.cliente.nombre %></td>
        <td><%= link_to 'Show', factura %></td>
        
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Factura', new_factura_path %>
