<p id="notice"><%= notice %></p>

<h1>Listado de Pagos</h1>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Fecha</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      
      <tbody>
    <% @pagos.each do |pago| %>
      <tr>
        <td><%= pago.fecha %></td>
        
        <td><%= link_to 'Destroy', pago, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Pago', new_pago_path %>
