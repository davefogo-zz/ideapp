<p id="notice"><%= notice %></p>

<h1>Listing Factura Items</h1>

<table>
  <thead>
    <tr>
      <th>Factura</th>
      <th>Ordene</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @factura_items.each do |factura_item| %>
      <tr>
        <td><h4><%= factura_item.ordene.medio.try(:nombre) %></h4></td>
        <td><h4><%= factura_item.fecha_orden %></h4></td>
        <td><h4><%= factura_item.costo_unidad %></h4></td>
        <td><%= link_to 'Show', factura_item %></td>
        <td><%= link_to 'Edit', edit_factura_item_path(factura_item) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

