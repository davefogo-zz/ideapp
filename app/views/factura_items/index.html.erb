<p id="notice"><%= notice %></p>

<h1>Listing Factura Items</h1>

<table>
  <thead>
    <tr>
      <th>Factura</th>
      <th>Ordene</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @factura_items.each do |factura_item| %>
      <tr>
        <td><%= factura_item.factura %></td>
        <td><%= factura_item.ordene %></td>
        <td><%= link_to 'Show', factura_item %></td>
        <td><%= link_to 'Edit', edit_factura_item_path(factura_item) %></td>
        <td><%= link_to 'Destroy', factura_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

